<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingsLayout"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Ustawienia"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:fontFamily="@font/regular"
        android:padding="5dp"
        android:text="Made by  SakubDev &amp; Kefirx"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/backToDashboardButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="COFNIJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/section_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157">

        <TextView
            android:id="@+id/openNameModal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/settings__option"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Imię"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/openLevelModal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/settings__option"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Poziom nauczania"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/openMusicModal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/settings__option"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Preferencje muzyczne"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/openWarningModal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/settings__option"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Wyczyść dane"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nameModal"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/modal"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/regular"
            android:text="Podaj nowe imie"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/newNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_input"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.777"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.813" />

        <Button
            android:id="@+id/editNameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZATWIERDŹ" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/levelModal"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/modal"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.591">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/regular"
            android:text="Podaj nowy poziom nauczania"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/newLevelSpinner"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="@drawable/spinner"
            android:entries="@array/schoolLevels"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.268" />

        <Button
            android:id="@+id/newLevelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZATWIERDŹ" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/musicModal"
        android:layout_width="350dp"
        android:layout_height="237dp"
        android:background="@drawable/modal"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/newMusicSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Słuchasz muzyki podczas nauki?"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.291"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <TextView
            android:id="@+id/newFavMusicTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/regular"
            android:text="Podaj nowy ulubiony typ muzyki"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/newMusicSpinner"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:background="@drawable/spinner"
            android:entries="@array/musicGenres"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.268" />

        <Button
            android:id="@+id/newMusicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZATWIERDŹ" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/wipeDataModal"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/modal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/regular"
            android:text="Wyczyszczenie danych spowoduje także usunięcie statystyk i sprawdzianów."
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold"
            android:text="Jesteś pewien?"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/wipeDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAK, WYCZYŚĆ" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>